{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "lib": [ "ES2022", "DOM" ],
    "types": ["office-js-preview"]
  },
  "include": [
    "wwwroot/**/*.ts",
    "Pages/**/*.razor.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}